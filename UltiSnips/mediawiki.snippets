snippet bb "'''...''' (bold)" wA
'''${1:${VISUAL:selected text}}'''$0
endsnippet

snippet "([a-zA-Z]+)bb" "'''...''' (bold)" ri
'''`!p snip.rv=match.group(1)`'''
endsnippet

snippet mm "''emphasize''" wA
''${1:${VISUAL:selected text}}''$0
